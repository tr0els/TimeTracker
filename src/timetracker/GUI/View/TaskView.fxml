<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" stylesheets="@task.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="timetracker.GUI.Controller.TaskController">
    <children>
        <JFXTextField fx:id="textTaskname" labelFloat="true" layoutX="14.0" layoutY="34.0" prefHeight="26.0" prefWidth="285.0" promptText="Navnet på  den nye opgave" />
        <JFXCheckBox fx:id="checkBillable" checkedColor="#1c42dd" layoutX="439.0" layoutY="36.0" onMouseEntered="#HandleTooltipForBillable" prefHeight="18.0" prefWidth="69.0" selected="true" text="Billable" />
        <JFXComboBox fx:id="comboListprojects" labelFloat="true" layoutX="311.0" layoutY="31.0" prefHeight="28.0" prefWidth="112.0" promptText="Vælg Projekt" />
        <JFXButton fx:id="timerButton" layoutX="524.0" layoutY="34.0" onAction="#handleStartStopTask" text="Start" />
      <Label fx:id="timerHours" layoutX="486.0" layoutY="79.0" text="00:">
         <font>
            <Font size="20.0" />
         </font></Label>
      <Label fx:id="timerMinutes" layoutX="513.0" layoutY="79.0" text="00:">
         <font>
            <Font size="20.0" />
         </font></Label>
      <Label fx:id="timerSeconds" layoutX="540.0" layoutY="79.0" text="00">
         <font>
            <Font size="20.0" />
         </font></Label>
      <Pane layoutX="10.0" layoutY="136.0" prefHeight="350.0" prefWidth="580.0">
         <children>
            <HBox fx:id="hboxToday" maxHeight="-Infinity" prefHeight="25.0" prefWidth="570.0" />
            <ScrollPane fx:id="scrollpaneToday" layoutY="25.0" prefHeight="125.0" prefWidth="580.0">
               <content>
                  <VBox fx:id="vboxToday" maxWidth="-Infinity" prefHeight="0.0" prefWidth="570.0" />
               </content>
            </ScrollPane>
            <HBox fx:id="hboxDays" layoutY="175.0" maxHeight="-Infinity" prefHeight="25.0" prefWidth="570.0" />
            <ScrollPane fx:id="scrollpaneDays" layoutY="200.0" prefHeight="150.0" prefWidth="580.0">
               <content>
                  <VBox fx:id="vboxDays" maxWidth="-Infinity" prefWidth="570.0" />
               </content>
            </ScrollPane>
         </children>
      </Pane>

    </children>
</AnchorPane>
